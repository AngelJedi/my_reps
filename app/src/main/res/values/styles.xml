<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/main_blue</item>
        <item name="colorPrimaryDark">@color/main_dark_blue</item>
    </style>

    <style name="MyRepTheme" parent="AppTheme">
        <item name="actionBarStyle">@style/ActionBar.Solid.MyRep.NoTitle</item>
    </style>

    <!-- Settings activity theme. -->
    <style name="SettingsTheme" parent="AppTheme">
    </style>

    <style name="ActionBar.Solid.MyRep.NoTitle" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="displayOptions">showHome|showTitle</item>
    </style>
</resources>
